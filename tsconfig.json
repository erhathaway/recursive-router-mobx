{
  "compilerOptions": {
    "baseUrl": "./src/",
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ESNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
